            id={`letter-${monthYear.displayName.replace(' ', '-')}`} 
            class="letter-section" 
            data-letter={monthYear.displayName}
            data-year={monthYear.year}
            data-month={monthYear.month}
          >
              <button class="letter-heading" data-letter={monthYear.displayName}>
                <span class="letter-text">{monthYear.displayName}</span>
                <span class="collapse-icon">▼</span>
              </button>
