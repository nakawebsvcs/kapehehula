---
import BaseLayout from "../layouts/BaseLayout.astro";
import classVideos from "../data/classLinks.json";

// Protect this page from unauthenticated access
const isLoggedIn = Astro.cookies.has("firebase-token");
if (!isLoggedIn) {
  return Astro.redirect("/");
}

import fallbackImage from "../assets/images/coa1.jpg";
const heroImage = { src: fallbackImage.src };

// Sort videos by date, newest first
const sortedVideos = classVideos.sort((a, b) => {
  const dateA = new Date(a.title);
  const dateB = new Date(b.title);
  return dateB.getTime() - dateA.getTime();
});

// Group videos by year, then by month
const videosByYearAndMonth = sortedVideos.reduce((acc, video) => {
  const date = new Date(video.title);
  const year = date.getFullYear();
  const monthName = date.toLocaleString('en-US', { month: 'long' });

  if (!acc[year]) {
    acc[year] = {};
  }
  if (!acc[year][monthName]) {
    acc[year][monthName] = [];
  }
  acc[year][monthName].push(video);
  return acc;
}, {});

// Get sorted list of years (newest first)
const years = Object.keys(videosByYearAndMonth).sort((a, b) => b - a);

// Get all unique month-year combinations for the grid
const allMonthYears = [];
years.forEach(year => {
  const months = Object.keys(videosByYearAndMonth[year]).sort((a, b) => {
  const monthNames = ["January", "February", "March", "April", "May", "June", 
                     "July", "August", "September", "October", "November", "December"];
  return monthNames.indexOf(a) - monthNames.indexOf(b); // Oldest first (January first)
});
  
  months.forEach(month => {
    allMonthYears.push({
      displayName: `${month} ${year}`,
      year: year,
      month: month
    });
  });
});

// Safely serialize the data for JavaScript
const videoDataJson = JSON.stringify(sortedVideos).replace(/</g, '\\u003c').replace(/>/g, '\\u003e');
const videosByYearAndMonthJson = JSON.stringify(videosByYearAndMonth).replace(/</g, '\\u003c').replace(/>/g, '\\u003e');
