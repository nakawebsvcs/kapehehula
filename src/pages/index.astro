    </div>

    <!-- Background Image -->
  <picture class="cs-picture">
    <source
      media="(max-width: 600px)"
      srcset="/assets/images/home-photo.jpg"
    />
    <source media="(min-width: 601px)" srcset="/assets/images/home-photo.jpg" />
    <img
      aria-hidden="true"
      decoding="async"
      src={optimizedImage.src}
      alt="new home"
      width="2500"
      height="1667"
      loading="eager"
    />
  </picture>
  </section>

  <!-- ============================================ -->
