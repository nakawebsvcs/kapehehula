---
import BaseLayout from "../layouts/BaseLayout.astro";

// We'll add Firebase auth check here later
import defaultImage from "../assets/images/header-logo.png";
const optimizedImage = { src: defaultImage.src };
---

<BaseLayout
  title="Admin Panel - Hālau Hula Malani O Kapehe"
  description="Admin panel for user management"
  preloadedImage={optimizedImage}
>
  <div class="admin-content">
    <div class="container py-5">
      <h1 class="mb-4">Admin Panel</h1>
      
      <div id="admin-panel" class="admin-panel">
        <div class="alert alert-info">
          <h3>Firebase Migration in Progress</h3>
          <p>The admin panel is being migrated from Supabase to Firebase.</p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style lang="less">
  .admin-content {
    padding-top: 4rem;
    padding-bottom: 3rem;
    
    h1 {
      color: var(--primary);
      font-family: "Afacad", Arial, sans-serif;
    }
  }
  
  .admin-panel {
    margin-top: 1.5rem;
  }
</style>
